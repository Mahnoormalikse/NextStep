<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/black2"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:background="@color/whiteOpacity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/black"
                android:gravity="center"
                android:text="Classroom"
                android:textColor="@color/whiteOpacity"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/CV_Mobile"
            android:layout_width="340dp"
            android:layout_height="141dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="#CCCCCC"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="20dp">


                <TextView
                    android:layout_width="238dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Announcements"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="84dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bell" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CV_t_shirt"
            android:layout_width="340dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="right"
                android:background="#CCCCCC"
                android:orientation="horizontal"
                android:padding="20dp">


                <TextView
                    android:layout_width="246dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Sessions"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="89dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:src="@drawable/presentation" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CV_Keychain"
            android:layout_width="340dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="#CCCCCC"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="20dp">


                <TextView
                    android:layout_width="252dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Tests"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/test" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CV_Wallet"
            android:layout_width="340dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="#CCCCCC"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="20dp">


                <TextView
                    android:layout_width="250dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Results"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notepad" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>

</ScrollView>