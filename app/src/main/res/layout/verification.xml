<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black2"
    >


    <TextView
        android:id="@+id/heading4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="25dp"
        android:inputType="textPersonName"
        android:text="@string/heading4"
        android:textColor="@color/whiteOpacity"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading4"
        android:layout_alignRight="@id/textView7"
        android:layout_marginStart="20dp"
        android:text="Enter the verification code we have just sent on your email address"
        android:textColor="@color/whiteOpacity"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading4"
        android:layout_marginStart="22dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/et_bg"
        android:hint="Code"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/login"
        android:layout_width="329dp"
        android:layout_height="61dp"
        android:layout_below="@+id/emailEt"
        android:layout_centerInParent="true"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="156dp"
        android:backgroundTint="@color/black"
        android:text="Verify Code"
        android:textColor="@color/white"
        android:textColorHint="@android:color/holo_orange_dark"
        android:textSize="20dp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEt"
        android:layout_marginStart="270dp"
        android:layout_marginTop="12dp"
        android:text="Resend code"
        android:textColor="@color/whiteOpacity"
        android:textSize="18sp" />


</RelativeLayout>